import java.util.*;

public class Main {
    public static void main(String[] args) {
      Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        int hundreds = num / 100;
        int tens = (num / 10) % 10;
        int units = num % 10;
        int reversed = units * 100 + tens * 10 + hundreds;
        if (num == reversed) {
            System.out.println("YES");
        } else {
            System.out.println("NO");
        }
  }
}
